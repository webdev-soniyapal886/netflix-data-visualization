import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

plt.style.use('seaborn-v0_8')

df = pd.read_csv("netflix_titles.csv")

üîç Initial Data Inspection
df.head()
df.shape
df.info()
df.isnull().sum()

üßπ Data Cleaning & Wrangling
df['date_added'] = pd.to_datetime(df['date_added'], errors='coerce')
df = df.dropna(subset=['date_added'])
df['year_added'] = df['date_added'].dt.year
df['month_added'] = df['date_added'].dt.month
Handle missing categorical values
df['rating'] = df['rating'].fillna('Not Rated')

df['country'] = df['country'].fillna('Unknown')
df['director'] = df['director'].fillna('Unknown')
df['cast'] = df['cast'].fillna('Unknown')
df.isnull().sum()

üìä Exploratory Data Analysis & Visualizations
1Ô∏è‚É£ Movies vs TV Shows
df['type'].value_counts().plot(kind='bar',color = ['#E50914', '#221F1F'])
plt.title("Movies vs TV Shows in Netflix")
plt.xlabel("Content type")
plt.ylabel("Count")
plt.show()
                               
2Ô∏è‚É£ Content Added Over the Years
df.groupby('year_added')['show_id'].count().plot(
    kind='line',
    marker='o'
)
plt.title("Netflix content added over years")
plt.xlabel("Years")
plt.ylabel("Number of titles added")
plt.show()
                
3Ô∏è‚É£ Top 10 Countries with Most Content
top_countries = df['country'].value_counts().head(10)
top_countries.plot(kind='barh')
plt.title('Top 10 Countries with Most Netflix Content')
plt.xlabel('Number of Titles')
plt.ylabel('Country')
plt.show()
4Ô∏è‚É£ Most Popular Genres
genres = df['listed_in'].str.split(', ').explode()
genres.value_counts().head(10).plot(kind='bar')
plt.title('Top 10 Genres on Netflix')
plt.xlabel('Genre')
plt.ylabel('Count')

plt.show()
5Ô∏è‚É£ Ratings Distribution
df['rating'].value_counts().plot(kind='bar')

plt.title('Ratings Distribution on Netflix')
plt.xlabel('Rating')
plt.ylabel('Count')
plt.xticks(rotation=45)
plt.show()

6Ô∏è‚É£ Movie Duration Analysis
movies = df[df['type'] == 'Movie'].copy()

movies['duration_min'] = movies['duration'].str.replace(' min', '').astype(int)

movies['duration_min'].plot(kind='hist', bins=20)

plt.title('Distribution of Movie Durations')
plt.xlabel('Duration (minutes)')
plt.ylabel('Number of Movies')
plt.show()


